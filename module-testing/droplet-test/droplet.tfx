module "burrito_droplet" {
  // source = "git::git@github.com:jperez3/taccoform-modules.git//vendors/digitalocean/droplet?ref=do-droplet-v1.0.0"
  source = "../../vendors/digitalocean/droplet"

  env     = var.env
  service = var.service
}

output "droplet_ids" {
  value = module.burrito_droplet.droplet_ids
}

module "burrito_loadbalancer" {
  // source = "git::git@github.com:jperez3/taccoform-modules.git//vendors/digitalocean/droplet?ref=do-droplet-v1.0.0"
  source = "../../vendors/digitalocean/load-balancer"

  env         = var.env
  subdomain   = "testing"
  domain      = "taccoform.com"
  droplet_ids = module.burrito_droplet.droplet_ids
  service     = var.service
}

output "loadbalancer_ip" {
  value = module.burrito_loadbalancer.public_ip
}
